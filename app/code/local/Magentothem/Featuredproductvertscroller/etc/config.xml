                <connection>
                    <use>core_setup</use>
                </connection>
            </featuredproductvertscroller_setup>
            <featuredproductvertscroller_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </featuredproductvertscroller_write>
            <featuredproductvertscroller_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </featuredproductvertscroller_read>
