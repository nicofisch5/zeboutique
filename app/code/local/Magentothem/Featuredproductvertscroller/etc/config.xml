            <featuredproductvertscroller>
                <class>Magentothem_Featuredproductvertscroller_Model</class>
                <resourceModel>featuredproductvertscroller_mysql4</resourceModel>
            </featuredproductvertscroller>
            <featuredproductvertscroller_mysql4>
                <class>Magentothem_Featuredproductvertscroller_Model_Mysql4</class>
                <entities>
                    <featuredproductvertscroller>
                        <table>featuredproductvertscroller</table>
                    </featuredproductvertscroller>
                </entities>
            </featuredproductvertscroller_mysql4>
        </models>
        <resources>
            <featuredproductvertscroller_setup>
                <setup>
                    <module>Magentothem_Featuredproductvertscroller</module>
