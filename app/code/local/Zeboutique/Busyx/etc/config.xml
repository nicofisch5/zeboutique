<config>
    <modules>
        <Zeboutique_Busyx>
            <version>0.1.0</version>
        </Zeboutique_Busyx>
    </modules>
    
    <global>        
        <models>
            <busyx>
                <class>Zeboutique_Busyx_Model</class>
            </busyx>
        </models>
        
        <helpers>
            <busyx>
                <class>Zeboutique_Busyx_Helper</class>
            </busyx>
        </helpers>
    </global>
    
    <frontend>
        <routers>
            <busyx>
                <use>standard</use>
                <args>
                    <module>Zeboutique_Busyx</module>
                    <frontName>busyx</frontName>
                </args>
            </busyx>
        </routers>
    </frontend>
    
    <crontab>
        <jobs>
            <busyx_stock_update1>
                <schedule>
                    <cron_expr>20 05 * * *</cron_expr>
                </schedule>
                <run>
                    <model>busyx/stock::updateStock</model>
                </run>
            </busyx_stock_update1>
        </jobs>
    </crontab>
</config>
