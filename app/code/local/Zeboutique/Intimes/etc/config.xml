<config>
    <modules>
        <Zeboutique_Intimes>
            <version>0.1.0</version>
        </Zeboutique_Intimes>
    </modules>
    
    <global>        
        <models>
            <intimes>
                <class>Zeboutique_Intimes_Model</class>
            </intimes>
        </models>
        
        <helpers>
            <intimes>
                <class>Zeboutique_Intimes_Helper</class>
            </intimes>
        </helpers>
    </global>
    
    <frontend>
        <routers>
            <intimes>
                <use>standard</use>
                <args>
                    <module>Zeboutique_Intimes</module>
                    <frontName>intimes</frontName>
                </args>
            </intimes>
        </routers>
    </frontend>
    
    <crontab>
        <jobs>
            <intimes_stock_update1>
                <schedule>
                    <cron_expr>40 05 * * *</cron_expr>
                </schedule>
                <run>
                    <model>intimes/stock::updateStock</model>
                </run>
            </intimes_stock_update1>
            <intimes_stock_update2>
                <schedule>
                    <cron_expr>40 11 * * *</cron_expr>
                </schedule>
                <run>
                    <model>intimes/stock::updateStock</model>
                </run>
            </intimes_stock_update2>
            <intimes_stock_update3>
                <schedule>
                    <cron_expr>40 16 * * *</cron_expr>
                </schedule>
                <run>
                    <model>intimes/stock::updateStock</model>
                </run>
            </intimes_stock_update3>
        </jobs>
    </crontab>
</config>
